<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/CustomAppBarTheme</item>
    </style>
    
    <style name="CustomAppBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#0099cc</item>
        <item name="android:logo">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/CustomeBarTitleTextStyle</item>
    </style>
    
    <style name="CustomeBarTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="NewsListStyle">
        <item name="android:background">#ffeeeeee</item>
        <item name="android:divider">@null</item>
    </style>

</resources>
